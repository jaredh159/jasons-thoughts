---
import type { DualPost } from '../types';
import striptags from 'striptags';
import { relativeTime } from '../lib/dates';

export interface Props {
  post: DualPost;
}

const { post } = Astro.props as Props;
---

<div class='p-6 rounded-2xl flex flex-col'>
  <div class='flex justify-between items-center'>
    <h2 class='text-2xl font-bold text-white'>{post.en.title}</h2>
    <h3 class='text-white text-opacity-80 font-medium'>
      {relativeTime(post.publishedAt)}
    </h3>
  </div>
  <p
    set:html={striptags(post.en.content).substring(0, 400).trim() + '...'}
    class='text-white text-opacity-70 text-lg mt-2 mb-4'
  >
  </p>
  <a
    class='flex justify-center items-center self-start space-x-2 transition duration-100 text-sky-200 hover:text-sky-300 cursor-pointer py-2'
  >
    <span>Read post</span>
    <i class='fa-solid fa-arrow-right'></i>
  </a>
</div>
