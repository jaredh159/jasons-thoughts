---
import { Lang } from '../types';

interface Props {
  title: string;
  trackId: number;
  lang: Lang;
}

function src(trackId: number, lang: Lang): string {
  const params: Record<string, string> = {
    url: `https://api.soundcloud.com/tracks/${trackId}`,
    auto_play: `false`,
    hide_related: `true`,
    show_comments: `false`,
    show_user: `false`,
    show_reposts: `false`,
    show_artwork: `false`,
    show_teaser: `false`,
    locale: lang,
  };

  const query = Object.keys(params)
    .map(
      (key) => `${encodeURIComponent(key)}=${encodeURIComponent(params[key])}`
    )
    .join(`&`);

  return `https://w.soundcloud.com/player/?${query}`;
}

const { title, trackId, lang } = Astro.props as Props;
---

<iframe
  class='bg-flgray-100'
  title={title}
  width='100%'
  scrolling='no'
  frame-border='no'
  src={src(trackId, lang)}></iframe>
