---
import Chrome from '../components/Chrome.astro';
---

<Chrome page='/contact'>
  <div class='py-10 px-5 sm:px-10 md:px-20 flex flex-col items-stretch'>
    <h1 class='text-3xl font-bold text-gray-300 mb-5'>Contact me</h1>
    <div
      class='w-full sm:w-auto bg-white rounded-2xl shadow-lg p-8 sm:p-10 flex justify-center items-center flex-col'
    >
      <form class='w-full sm:w-auto'>
        <label class='block text-gray-500 font-medium mb-1' for='email'
          >Email address / Dirección de correo electrónico
        </label>
        <input
          id='email'
          type='email'
          class='w-full sm:w-96 px-3 py-2 border rounded-lg bg-gray-100 text-gray-500'
          placeholder='me@example.com'
        />
        <label class='block text-gray-500 mt-5 font-medium mb-1' for='area'
          >Message / Mensaje
        </label>
        <textarea
          id='area'
          class='h-72 w-full sm:w-96 px-3 py-2 border rounded-lg bg-gray-100 text-gray-500'
          placeholder='Questions or comments / preguntas o comentarios'></textarea>
      </form>
    </div>
  </div>
</Chrome>
